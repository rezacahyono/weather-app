<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Weather.Card.Filled.Large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nan"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
            app:layout_constraintBottom_toTopOf="@id/iv_icon_temperature"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/time" />

        <ImageView
            android:id="@+id/iv_icon_temperature"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginEnd="@dimen/small_padding"
            android:contentDescription="@string/icon_weather"
            app:layout_constraintBottom_toTopOf="@id/tv_weather_desc"
            app:layout_constraintEnd_toStartOf="@id/tv_temperature"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            tools:src="@drawable/night_clouds" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_padding"
            android:text="@string/nan"
            android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon_temperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_icon_temperature"
            app:layout_constraintTop_toTopOf="@id/iv_icon_temperature"
            tools:text="25Â°" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/nan"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintBottom_toTopOf="@id/tv_location_name"
            app:layout_constraintTop_toBottomOf="@id/iv_icon_temperature"
            tools:text="@string/clear_sky" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/nan"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintBottom_toTopOf="@id/tv_wind_speed"
            app:layout_constraintTop_toBottomOf="@id/tv_weather_desc"
            tools:text="Jakarta, Indonesia" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_feels_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/nan"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wind_speed"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_location_name"
            tools:text="Feels like 30" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/extra_small_padding"
            app:layout_constraintBottom_toBottomOf="@id/tv_wind_speed"
            app:layout_constraintEnd_toStartOf="@id/tv_wind_speed"
            app:layout_constraintStart_toEndOf="@id/tv_feels_like"
            app:layout_constraintTop_toTopOf="@id/tv_wind_speed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_wind_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/nan"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintEnd_toStartOf="@id/divider1"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/tv_location_name"
            tools:text="Wind speed hjh12km/h" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/extra_small_padding"
            app:layout_constraintBottom_toBottomOf="@id/tv_wind_speed"
            app:layout_constraintEnd_toStartOf="@id/tv_humidity"
            app:layout_constraintStart_toEndOf="@id/tv_wind_speed"
            app:layout_constraintTop_toTopOf="@id/tv_wind_speed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_humidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/nan"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wind_speed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider1"
            app:layout_constraintTop_toBottomOf="@id/tv_location_name"
            tools:text="Humidity 30%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Card-->
    <style name="Widget.Weather.Card.Filled.Large" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <style name="Widget.Weather.Card.Filled.Medium" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="Widget.Weather.Card.Outlined.Medium" parent="Widget.Material3.CardView.Outlined">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <!--Search Bar-->
    <style name="Widget.Weather.SearchBar" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <!--Chip-->
    <style name="Widget.Weather.Chip.Elevated" parent="Widget.Material3.Chip.Assist.Elevated">
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <!--Image-->
    <style name="ShapeAppearance.Weather.Image.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>